@model Employee
<!DOCTYPE html>
<html>
<head>
    <title></title>
    <style>
        .input-validation-error{
            border : 1px solid darkred;
            background-color : #ffcccb;
        }
        .validation-summary-errors{
            color : red;
            font-weight : bolder;
        }
    </style>
</head>
<body>
    <form asp-action="Employees" method="post">
        <h1>Employees Form</h1>

        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="EmployeeName">Employee Name</label>
            <input asp-for = "EmployeeName" class="form-control form-control-sm" placeholder ="Enter your full name....." />
        </div>

        <div class=" form-group">
            <label asp-for="Department">Department</label>"
            <select asp-for="Department" class="form-control form-control-sm">
                <option></option>
                <option value ="operations">Operations</option>
                <option value="IT">Information Tech.</option>
                <option value="finance">Finance</option>
            </select>
        </div>

        <div class="form-check form-check-inline">
            <label asp-for = "isActive" class="form-check-label">Is Active?</label>
            <input type="checkbox" asp-for="isActive" class="form-check-input"/>
        </div>

        <div class="form-group">
            <label asp-for="JobTitle">Job Title</label>
            <input asp-for="JobTitle" class="form-control form-control-sm"/>
        </div>

        <div class="form-group">
            <label asp-for="BirthDate">Birth Date</label>
            <input type ="date" asp-for="BirthDate" class="form-control form-control-sm" />
        </div>

        <div class="form-group">
            <label asp-for="EmailAddress">Email</label>
            <input type="email" asp-for="EmailAddress" class="form-control form-control-sm" />
        </div>

        <button type="submit" class="btn btn-success">Save</button>
    </form>
</body>
</html>

